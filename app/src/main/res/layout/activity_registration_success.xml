<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Заголовок в самом верху -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пользуйтесь с удовольствием"
        android:textSize="24sp"
        android:fontFamily="@font/montt"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp" />

    <!-- Центральная часть с иконкой и текстом -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Иконка успеха -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_success"
            android:layout_marginBottom="32dp" />

        <!-- Текст об успешной регистрации -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы успешно зарегистрировались. Обработка ваших персональных данных займет около двух часов. Спасибо за ожидание."
            android:textSize="16sp"
            android:fontFamily="@font/montt"
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Кнопка Далее -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:fontFamily="@font/montt"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="16dp" />

</LinearLayout>