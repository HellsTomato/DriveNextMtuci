<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:textColor="@color/purple_700"
        android:textSize="32sp"
        android:fontFamily="@font/montt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="703dp"
        tools:text="DriveNext" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_subtitle"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:fontFamily="@font/montt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="678dp"
        tools:text="Поможем найти твою следующую поездку" />

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:src="@drawable/splash_car"
        android:contentDescription="@string/splash_title"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="285dp"
        android:layout_marginBottom="216dp" />

</androidx.constraintlayout.widget.ConstraintLayout>