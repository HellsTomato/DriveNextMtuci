<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeActivity">

    <!-- Название приложения вверху слева -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DriveNext"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:fontFamily="@font/montt"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Слоган под названием -->
    <TextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поможем найти твою следующую поездку"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/montt"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAppName" />

    <!-- Логотип по центру экрана -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="343dp"
        android:layout_height="343dp"
        android:src="@drawable/splash_car"
        app:layout_constraintBottom_toTopOf="@+id/llButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSlogan"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Контейнер для кнопок внизу -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Кнопка Войти - фиолетовая с белым текстом -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/purple_700"
            android:text="Войти"
            android:textAllCaps="false"
            android:fontFamily="@font/montt"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Отступ между кнопками -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Кнопка Зарегистрироваться - белая с черным текстом -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:text="Зарегистрироваться"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/montt"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>